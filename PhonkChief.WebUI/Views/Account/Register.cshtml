@model PhonkChief.Domain.ViewModels.RegisterViewModel;

<form asp-antiforgery="true" asp-action="Register" asp-controller="Account">
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword"></label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="Password"></span>
        </div>
         <div>
            <label asp-for="NickName"></label><br />
            <input asp-for="NickName" />
            <span asp-validation-for="NickName"></span>
        </div>
        <br />
        <div>
            <button type="submit" class="btn btn-light">Регистрация</button>
        </div>
    </div>
</form>

     